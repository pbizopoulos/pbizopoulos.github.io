name:                check-nix
version:             0.0.0
synopsis:            Sorts attributes alphabetically, using dotted notation for attributes with sets or lists, and nested notation otherwise.
cabal-version:       >=1.2
build-type:          Simple
executable check-nix
  main-is: Main.hs
  build-depends:
    HUnit,
    base,
    data-fix,
    hnix,
    prettyprinter,
    temporary,
    text
  ghc-options: -O2 -Weverything -Werror
