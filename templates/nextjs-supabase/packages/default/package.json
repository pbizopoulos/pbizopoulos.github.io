{
  "name": "nextjs-supabase",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "bin": {
    "nextjs-supabase": "scripts/start.js"
  },
  "scripts": {
    "dev": "next dev",
    "format": "nix fmt && npx tsc",
    "build": "next build",
    "start": "next start",
    "test": "npm run test:unit && npm run test:e2e && npm run test:db",
    "test:db": "supabase test db",
    "test:e2e": "E2E_MODE=prod playwright test",
    "test:e2e:dev": "playwright test",
    "test:audit": "npm run build && E2E_MODE=prod playwright test --project=audit",
    "test:visual": "E2E_MODE=prod playwright test --update-snapshots",
    "test:unit": "vitest run",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "@supabase/ssr": "^0.8.0",
    "next": "^16.1.6",
    "react": "^19.2.4",
    "react-dom": "^19.2.4"
  },
  "devDependencies": {
    "@playwright/test": "1.57.0",
    "@supabase/supabase-js": "^2.97.0",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/react": "^16.3.2",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^25.3.1",
    "@types/react": "19.2.14",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.4",
    "@vitest/coverage-v8": "^4.0.18",
    "jsdom": "^28.1.0",
    "typescript": "~5.9.3",
    "vitest": "^4.0.18"
  }
}
